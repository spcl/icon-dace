/
EOF
done

# time mean variables on all levels
# ---------------------------------
for var in tend_ta_dyn   tend_ua_dyn   tend_va_dyn   tend_hus_dyn  \
           tend_ta_vdf   tend_ua_vdf   tend_va_vdf   tend_hus_vdf  \
           tend_ta_mig                               tend_hus_mig  \
           tend_ta_rlw                                             \
	   tend_ta_rsw
do
  cat >> ${atmo_namelist} << EOF
